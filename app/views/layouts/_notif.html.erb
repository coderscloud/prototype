<% @notif=current_user.notifications
	@notif.each do |notif|  
		if notif.notification_type== Notification::OFFER_POSTED #if it's a new offer notif
		 %>	
		<div class="notif <%= !notif.is_read ? 'selected': '' %>"><%= link_to "Vous avez reçu une nouvelle offre pour un projet", project_path(notif.target.project, :anchor =>"offer_#{notif.target.id}") %></div>
		<%	end 
		
		if notif.notification_type== Notification::PROJECT_ASSIGNED #if iit's a project assigned
		 %>	
		<div class="notif <%= !notif.is_read ? 'selected': '' %>"><%= link_to "Un projet vous a été assigné par un client", project_path(notif.target.target_id) %></div>
		<%	end %>
		 
		<%if notif.notification_type== Notification::PROJECT_VALIDATED #if iit's a project assigned %>
	
		<div class="notif <%= !notif.is_read ? 'selected': '' %>"><%= link_to (notif.target.chosen_offer.submitter.login + " a validé un projet et a soumis un planning"), dashboard_path( :projectid =>notif.target.id) %></div>
		<%	end %>
<%	end %>


