<!DOCTYPE html>
<html>
  <head>
    <title>Coders Cloud</title>
    <%= csrf_meta_tag %>
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->    
    <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
    <%= stylesheet_link_tag 'blueprint/print',  :media => 'print' %>
    <!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]-->
    <%= stylesheet_link_tag 'smart_wizard','token-input','token-input-mac','token-input-facebook','jquery-ui','custom', :media => 'screen' %>
    <%= javascript_include_tag :defaults,'jquery', "rails.validations", "jquery.tokeninput", "jquery.smartWizard-2.0.js","jquery-ui.min","livevalidation"  %>
  </head>
 <body>
	<div class="container">
    <header class="round">
     
       <nav id="header_links">
         <ul>
           <li><%= link_to "Home", root_path %></li>
           <li><%= link_to "Aide", help_path %></li>
           <% if signed_in? %>
    		 	<li><%= link_to "Paramètres", authentications_path %></li>
	      	<li><%= link_to "Déconnexion", signout_path, :method => :delete %></li>
		     <% else %>
		      <li><%= link_to "Se connecter", signin_path %></li>
		     <% end %>
          </ul>
        </nav>
		<div id="header_navigation" > 
					<a href="/" id="logo"></a> 
			      <ul class="navigation">
					<% if signed_in? %>
						<li><%= link_to "My Profile", current_user %></li>
					<% end %>
		            <li><%= link_to "Home", '/pages/home' %></li>
		            <li><%= link_to "Help", '#' %></li>
		            <li><%= link_to "Sign in", '#' %></li>
		          </ul>


				</div>
      </header>
      <section class="round">
	    <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <%= yield %>
		 	<div class="clear"> </div>
      </section>
    </div>
 	<%= render 'layouts/olark' %>
	<%= debug(params) if Rails.env.development? %>
	   
  </body>
</html>